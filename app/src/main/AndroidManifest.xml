<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.example.andreatto.tccmakerbluetooth">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SuperMaterialTheme">
        <activity android:name=".views.listas.buttons.ButtonsList"></activity>
        <activity android:name=".views.listas.cards.CardsList" />
        <activity android:name=".views.terminal.chat.TerminalChat" />
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".util.bluetooth.activitys.AppCompatActivityBluetooth" />
        <activity android:name=".util.bluetooth.activitys.AppCompatActivityBluetoothCon" />
        <activity android:name=".views.form.BoardFormActivity" />
        <activity android:name=".views.form.list.BluetoothListActivityForActivateForm" />
        <activity android:name=".views.listas.board.BoardListActivity" />
        <activity android:name=".views.listas.board.list.BluetoothListActivityForActivate" />
        <activity android:name=".views.listas.bluetoothBonded.BluetoothBondedListActivity" />
        <activity android:name=".views.listas.bluetoothActived.BluetoothActivedListActivity" />

        <service
            android:name=".services.bluetooth.ServiceBluetooth"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>