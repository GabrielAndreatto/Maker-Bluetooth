<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.listas.boards.BoardListActivity">

    <include layout="@layout/toolbar_bluetooth_bonded_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_bluetooth_bonded"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/card_bluetooth_bonded">

    </androidx.recyclerview.widget.RecyclerView>

    <fragment
        android:id="@+id/fragment_adMob_banner"
        android:name="br.com.example.andreatto.tccmakerbluetooth.adMob.AdMobFragmentBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.appcompat.widget.LinearLayoutCompat>